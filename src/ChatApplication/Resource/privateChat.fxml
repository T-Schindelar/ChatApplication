<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="411.0"/>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="89.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="330.0" vgrow="SOMETIMES"/>
        <RowConstraints prefHeight="20.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <TextArea fx:id="txtAreaChat" focusTraversable="false" prefHeight="250.0" prefWidth="480.0"
                  GridPane.columnSpan="2">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </TextArea>
        <TextField fx:id="txtFieldMessage" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </TextField>
        <Button fx:id="btnSendMessage" mnemonicParsing="false" onAction="#btnSendMessage" text="senden"
                GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
