<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatApplication.Controller.LoginController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="162.0" />
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="156.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="26.0" vgrow="SOMETIMES" />
        <RowConstraints valignment="BOTTOM" vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints valignment="BOTTOM" vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
      <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label text="Name" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin></Label>
        <TextField fx:id="txtFieldName" GridPane.columnSpan="2" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin></TextField>
        <Label text="Passwort" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin></Label>
        <PasswordField fx:id="pswFieldPassword" GridPane.columnSpan="2" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin></PasswordField>
        <Button fx:id="btnLogin" focusTraversable="false" mnemonicParsing="false" onAction="#btnLogin" prefHeight="26.0" prefWidth="166.0" text="Einloggen" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin></Button>
        <Button fx:id="btnRegistration" focusTraversable="false" mnemonicParsing="false" onAction="#btnRegistration" prefHeight="26.0" prefWidth="159.0" text="Registrieren" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin></Button>
      <TextField fx:id="txtFieldError" alignment="CENTER" editable="false" focusTraversable="false" style="-fx-background-color: none; -fx-text-fill: red;" GridPane.columnSpan="2" GridPane.rowIndex="6">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </TextField>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>
