<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" prefWidth="350.0" />
      <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" prefWidth="250.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
    <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
    <RowConstraints prefHeight="358.0" valignment="TOP" vgrow="SOMETIMES" />
    <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <MenuBar GridPane.columnSpan="2">
        <menus>
          <Menu mnemonicParsing="false" text="Kontoverwaltung">
            <items>
              <MenuItem fx:id="menuItemChangeName" mnemonicParsing="false" onAction="#menuItemChangeName" text="Name ändern" />
              <MenuItem fx:id="menuItemChangePassword" mnemonicParsing="false" onAction="#menuItemChangePassword" text="Passwort ändern" />
                  <MenuItem fx:id="menuItemDeleteAccount" mnemonicParsing="false" onAction="#menuItemDeleteAccount" text="Konto löschen" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label text="Verbindung" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Label>
      <TextField fx:id="txtFieldState" layoutX="20.0" layoutY="474.0" style="-fx-background-color: none;" GridPane.columnSpan="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
         </GridPane.margin>
      </TextField>
      <TextField fx:id="txtFieldMessage" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </TextField>
      <Button fx:id="btnSendMessage" mnemonicParsing="false" onAction="#btnSendMessage" text="Senden" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Button>
      <TextArea fx:id="txtAreaChat" editable="false" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </TextArea>
      <TabPane focusTraversable="false" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <tabs>
          <Tab text="Benutzer">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="listUser" focusTraversable="false" layoutY="-2.0" prefHeight="297.0" prefWidth="280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </ListView>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Räume">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="listRooms" focusTraversable="false" layoutX="40.0" layoutY="6.0" onMouseClicked="#listRoomsClicked" prefHeight="297.0" prefWidth="280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </TabPane>
   </children>
</GridPane>
